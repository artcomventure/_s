{
	"scripts": {
		"watch": "babel ./ -d ./ --out-file-extension .min.js --source-maps --ignore=**/*.min.js --presets=@babel/preset-env --watch",
		"build": "babel ./ -d ./ --out-file-extension .min.js --no-comments --ignore=**/*.min.js --presets=@babel/preset-env,babel-preset-minify",

		"i18n:scan": "npm run i18n:pot && npm run i18n:po",
		"i18n:pot": "wp i18n make-pot ./ languages/anchor-navigation.pot --domain=anchor-navigation --exclude=src,node_modules,js/**/*.min.* --package-name='Anchor Navigation'",
		"i18n:po": "wp i18n update-po languages/anchor-navigation.pot languages",
		"i18n:create": "npm run i18n:mo && npm run i18n:json",
		"i18n:mo": "wp i18n make-mo languages",
		"i18n:json": "wp i18n make-json languages --no-purge"
	}
}
