{
  "scripts": {
    "watch": "node-sass ./ -o ./ --source-map true --output-style expanded --indent-type tab --indent-width 1 -w",
    "build": "node-sass ./ -o ./ --output-style compressed",

    "i18n:pot": "wp i18n make-pot . languages/security.pot --domain=security --exclude=src,node_modules,**/*.min.* --subtract=../../../languages/_s.pot --package-name=Security",
    "i18n:po": "wp i18n update-po languages/security.pot languages",
    "i18n:mo": "wp i18n make-mo languages languages"
  }
}
