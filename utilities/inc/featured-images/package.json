{
  "scripts": {
    "watch": "wp-scripts start ./block.js",
    "build": "wp-scripts build ./block.js",

    "i18n:scan": "npm run i18n:pot && npm run i18n:po",
    "i18n:pot": "wp i18n make-pot . languages/featured-images.pot --domain=featured-images --exclude=src,node_modules,**/*.min.* --package-name='Featured Images'",
    "i18n:po": "wp i18n update-po languages/featured-images.pot languages",
    "i18n:create": "npm run i18n:mo & npm run i18n:json",
    "i18n:mo": "wp i18n make-mo languages",
    "i18n:json": "wp i18n make-json languages --no-purge"
  }
}
