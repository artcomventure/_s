{
  "scripts": {
    "watch": "wp-scripts start format.js & npm-run-all --parallel watch:*",
    "build": "wp-scripts build format.js & npm-run-all --parallel build:*",

    "watch:js": "babel ./app.js -d . --out-file-extension .min.js --source-maps --ignore=./**/*.min.js --presets=@babel/preset-env --watch",

    "build:js": "babel ./app.js -d . --out-file-extension .min.js --no-comments --ignore=./**/*.min.js --presets=@babel/preset-env,babel-preset-minify",

    "i18n:scan": "npm run i18n:pot && npm run i18n:po",
    "i18n:pot": "wp i18n make-pot . languages/odometer.pot --domain=odometer --exclude=node_modules,**/*.min.* --package-name=Odometer",
    "i18n:po": "wp i18n update-po languages/odometer.pot languages",
    "i18n:create": "npm run i18n:mo & npm run i18n:json",
    "i18n:mo": "wp i18n make-mo languages languages",
    "i18n:json": "wp i18n make-json languages/ --no-purge"
  }
}
